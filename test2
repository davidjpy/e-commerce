import './TestPage.css';

const TestPage = () => {

    const menuOptions = [
        { title: 'SHELTERS', subTitle: ['Tents', 'Sleeping Bags', 'Furniture', 'Kitchen'] },
        { title: 'WEARS', subTitle: ['Clouthes', 'Footwears', 'Backpacks'] },
        { title: 'TOOLS & NECESSITIES', subTitle: ['Gadgets', 'Treatment'] }
    ]

    const [active, setActive] = useState('');

    return (
        <div className='testpage'>
            <div className='testpage__header'>
                <h5 className='testpage__text testpage__text--title'>CATEGORIES</h5>
            </div>
            <div className='testpage__body'>
                {menuOptions.map((item) => {
                    return (
                        <>
                            <p className='testpage__text testpage__text--subtitle'>{item.title}</p>
                            {item.subTitle.map((subItem) => {
                                return (
                                    <p className='testpage__text testpage__text--body'>{subItem}</p>
                                );
                            })}
                        </>
                    )
                })}
            </div>
        </div>
    );
}

export default TestPage;

